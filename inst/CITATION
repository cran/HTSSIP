citHeader("To cite HTSSIP in publications use:")

citEntry(
         entry = "Article",
         title = "HTSSIP: An R package for analysis of high throughput sequencing data from nucleic acid stable isotope probing (SIP) experiments",
         author       = personList(
           as.person("Nicholas D. Youngblut"),
           as.person("Samuel E. Barnett"),
           as.person("Daniel H. Buckley")),
         journal      = "PLoS ONE",
         year         = "2018",
         volume       = "13",
         number       = "1",
         pages        = "e0189616",
         url          = "http://journals.plos.org/plosone/article?id=10.1371/journal.pone.0189616",
         textVersion  = paste("Youngblut ND, Barnett SE, Buckley DH (2018)", 
			      "HTSSIP: An R package for analysis of high throughput sequencing data from nucleic acid stable isotope probing (SIP) experiments.",
			      "PLoS ONE 13(1): e0189616. DOI: 10.1371/journal.pone.0189616")
         )
